.input
  height: 45px
  width 100%
  padding: 0 28px;
  font-family: 'Jost-Light'
  font-weight: 300
  font-size: 14px;
  line-height: 120%
  color: #797979
  border: 1px solid #fff
  border-radius: 6px;
  background: #fff
  position relative
  overflow hidden

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #F55FAF
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #2B2A29
    font-weight: bold
    border-radius: 30px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #19AAB9
  &:focus
    color: #000
    caret-color: #000
    border 1px solid #19AAB9
    box-shadow: 3px 3px 20px 0px #19AAB9
    background: #fff
    &::placeholder
      color: #797979
  &::placeholder
    color: #797979
  +above($breakpoints.sm)
    height: 50px
    font-size: 14px;
  +above($breakpoints.md)
    height: 53px
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 56px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    border: none
    padding: 15px 10px 10px 20px
    resize: none
    height: 60px
    width 280px
    border-radius: 6px
    +above($breakpoints.sm)
      height: 70px;
      width: 367px;
    +above($breakpoints.md)
      height: 90px;
      width: 410px;
    +above($breakpoints.xxl)
      padding: 18px 10px 10px 28px
      height: 112px
      width 470px

