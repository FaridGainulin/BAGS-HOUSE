.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    background-color #393E40
    border-radius: 6px
    padding 5px
    +above($breakpoints.sm)
      border-radius: 8px
      padding 8px 15px
    +above($breakpoints.md)
      border-radius: 10px
      padding 8px 20px
    +above($breakpoints.xxl)
      padding 8px 24px
      border-radius: 12px
      height: 93px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 130px
    height: auto
    +above($breakpoints.sm)
      width 200px
    +above($breakpoints.md)
      width 230px
    +above($breakpoints.xxl)
      width 247px

  &__connection-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 22px

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      gap: 8px
    +above($breakpoints.md)
      gap: 10px
    +above($breakpoints.xxl)
      gap: 14px

  &__connection-icon
    width 11px
    height: 11px
    +above($breakpoints.sm)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 13px
      height: 13px
    +above($breakpoints.xxl)
      width 14px
      height: 14px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
      justify-content center
      align-items: center
      border-radius: 4px
      color: #fff
      background: linear-gradient(90deg, #19aab9 0%, #0f838f 100%);
      width 100px
      height: 32px
      cursor pointer
    +above($breakpoints.md)
      width 120px
      height: 34px
    +above($breakpoints.xxl)
      width 136px
      height: 36px
