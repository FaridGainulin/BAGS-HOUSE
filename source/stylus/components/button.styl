.btn
  height: 45px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #FFFFFF
  border-radius: 6px
  // border: 3px solid #fff;
  // text-transform: uppercase
  background: linear-gradient(90deg, #19aab9 0%, #0f838f 100%);
  font-family: 'Jost-SemiBold'
  font-weight: 600
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 14px;
    height: 50px;
  +above($breakpoints.md)
    font-size: 15px;
    height: 53px;
  +above($breakpoints.xxl)
    font-size: 16px;
    height: 56px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

