.main-section
  background-color #2B2B2B
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    position relative
    padding 15px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 15px 0 90px 0
    +above($breakpoints.md)
      padding 20px 0 150px 0
    +above($breakpoints.xxl)
      padding 20px 0 208px 0

  &__title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 70px 0 20px 0
    +above($breakpoints.md)
      padding 90px 0 25px 0
    +above($breakpoints.xxl)
      padding 137px 0 30px 0

  &__line
    margin 0 auto
    width 53px
    height: 2px
    border-radius: 2px
    background-color #0F838F
    +above($breakpoints.sm)
      margin 0

  &__text
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 25px 0 22px 0
    +above($breakpoints.xxl)
      padding 30px 0 24px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 100%
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      width 480px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 210px !important
      +above($breakpoints.xxl)
        width 230px !important

  &__agree-wrapper
    +above($breakpoints.sm)
      padding-left 18px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 28px

  &__img
    width 308px
    height: auto
    margin: 15px 0px 0 -5px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 383px;
      right: -45px;
      bottom: 86px;
    +above($breakpoints.md)
      width: 525px;
      bottom: 82px;
      right: -58px;
    +above($breakpoints.xxl)
      width 593px
      bottom: 160px
      right: -69px

  &__img-baggage
    position: absolute
    width: 347px;
    height: auto;
    bottom: 0;
    right: 15px;
    +above($breakpoints.sm)
      width: 431px;
      bottom: 12px;
      right: 0px;
    +above($breakpoints.md)
      width: 609px;
      bottom: 16px;
      right: 88px;
    +above($breakpoints.xxl)
      width 799px
      bottom: 43px
      right: 88px
