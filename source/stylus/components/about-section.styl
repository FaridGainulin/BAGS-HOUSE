.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #242424

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 124px 0 124px 0

  &__top
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 50px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 115px

  &__title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 40px 0

  &__text
    padding-left 10px
    border-left: 1px solid #19AAB9
    +above($breakpoints.sm)
      padding-left 15px
    +above($breakpoints.md)
      border-left: 2px solid #19AAB9
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 30px

  &__img
    width 308px
    height: auto
    +above($breakpoints.sm)
      width 360px
    +above($breakpoints.md)
      width 485px
    +above($breakpoints.xxl)
      width 577px

  &__bottom
    position relative
    z-index 1
    overflow hidden
    width 100%
    border-radius: 8px
    background-color #393E40
    padding 15px 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 20px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 15px
      border-radius: 10px
      padding 30px
      margin-top 30px
    +above($breakpoints.md)
      gap: 20px
      border-radius: 12px
      padding 40px
      margin-top 45px
    +above($breakpoints.xxl)
      margin-top 58px
      border-radius: 14px
      padding 53px
      height: 447px

  &__bottom-img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      z-index -1
      width 425px
      height: auto
      bottom: 0
      right: 0
    +above($breakpoints.md)
      width 523px
    +above($breakpoints.xxl)
      width 608px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 100%
    +above($breakpoints.sm)
      width 470px
      flex-direction: row
      flex-wrap: wrap
      gap: 7px
    +above($breakpoints.md)
      gap: 10px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 200px !important
      +above($breakpoints.xxl)
        width 230px !important

  &__agree-wrapper
    +above($breakpoints.sm)
      width 180px
    +above($breakpoints.md)
      padding-left 20px
      width 200px
    +above($breakpoints.xxl)
      padding-left 28px
      width 230px
