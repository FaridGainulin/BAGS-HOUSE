.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 124px 0 124px 0

  &__img-lines
    position: absolute
    width: 140px;
    height: auto;
    bottom: 49px;
    left: -68px;
    +above($breakpoints.sm)
      width: 140px;
      bottom: 83px;
      left: -68px;
    +above($breakpoints.md)
      width: 170px;
      bottom: 126px;
      left: -83px;
    +above($breakpoints.xxl)
      width 211px
      bottom: 180px
      left: -104px

  &__title,
  &__sub-title,
  &__card
    text-align: center
    color #000

  &__sub-title
    padding 15px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 40px 0
    +above($breakpoints.md)
      padding 25px 0 50px 0
    +above($breakpoints.xxl)
      padding 30px 0 64px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    z-index 1
    width 280px !important
    padding 15px 0
    border-radius: 8px
    border: 1px solid #7E8287
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      border-radius: 10px
      padding 20px 0
      width 235px !important
    +above($breakpoints.md)
      border-radius: 12px
      gap: 12px
      width 308px !important
      padding 25px 0
    +above($breakpoints.xxl)
      width 380px !important
      padding 29px 0
      height: 150px
      border-radius: 15px
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color: #ffffff;
      top: 20px;
      left: -4px;
      width: 286px;
      height: 40px;
      +above($breakpoints.sm)
        width: 241px;
        height: 57px;
        top: 25px;
      +above($breakpoints.md)
        width: 314px;
        height: 76px;
        top: 27px;
      +above($breakpoints.xxl)
        width: 386px;
        height: 90px;
        top: 30px;

  &__bottom
    position relative
    width 100%
    padding 15px 10px
    border-radius: 8px
    background-image: url('../images/finances-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #181e1f
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      border-radius: 10px
      margin-top 30px
      padding 30px 10px 30px 30px
    +above($breakpoints.md)
      border-radius: 12px
      margin-top 50px
      padding 40px 10px 40px 40px
    +above($breakpoints.xxl)
      border-radius: 14px
      margin-top 63px
      padding 46px 10px 46px 48px
      height: 320px

  &__bottom-img
    position absolute
    width: 110px;
    height: auto;
    bottom: 85px;
    right: 282px;
    +above($breakpoints.sm)
      bottom: 0
      right: 0
      width 180px
    +above($breakpoints.md)
      width 310px
    +above($breakpoints.xxl)
      width 431px


  &__bottom-text
    padding 15px 0
    +above($breakpoints.sm)
      padding 15px 0 18px 0
    +above($breakpoints.md)
      padding 15px 0 20px 0
    +above($breakpoints.xxl)
      padding 20px 0 28px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 100%
    +above($breakpoints.sm)
      flex-direction: row
      gap: 7px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 172px !important
      +above($breakpoints.md)
        width 200px !important
      +above($breakpoints.xxl)
        width 230px !important

  &__agree-wrapper
    display: flex
    justify-content center
    padding-top 15px
    +above($breakpoints.sm)
      justify-content start
    +above($breakpoints.md)
      padding-top 20px
